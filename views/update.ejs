<body>
    <%- include('partials/header'); -%>
    
    <div class="postcontainer">
        <h1>Update Post</h1>
        <form action="/update/<%= post._id %>" method="POST">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= post.title %>" required>
            <label for="content">Content</label>
            <textarea name="content" rows="4" required><%= post.content %></textarea>
            <label for="photo">Photo URL</label>
            <input type="text" name="photo" value="<%= post.photo %>" required>
            <label for="name">Name</label>
            <input type="text" name="name" value="<%= post.name %>" required>
            <button type="submit">Update Post</button>
        </form>

    </div>


    <%- include('partials/footer'); -%>

    <!-- Your existing body content here -->



</body>